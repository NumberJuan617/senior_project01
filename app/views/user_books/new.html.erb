<div class="row clearfix">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for (@userBook) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :Book,'Select the Activity' %>
			<%= f.select(:book_id, @userBookOptions) %>

			<%= f.hidden_field :user_id, :value =>@user.id %>


			<%= f.submit "Add Book", class:"btn btn-primary" %>

			<h1>Add a new Book instead</h1>

			<%=link_to 'Add New Book', addNewBook_path, class:"btn btn-primary" %>

		<% end %>	
	</div>
	
</div>		