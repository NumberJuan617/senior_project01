<% provide(:title, "Home") %>
<!-- NOTE: there is a lot of duplicate CSS information that can easily be placed into a class or ID in the custom.css file. Some of these 
	repetitive things include color, text-center, 
	 -->

	<% if logged_in? %>
		<div class="row clearfix" >
		
			<!-- This is grid is for the home page containing all of the users friends and information -->
			<div class="col-md-12 column" >

			<div class="row">

				<aside class="col-md-12" style="background-color:lavender;">
				  <section class="user_info">
				    <%= render 'shared/user_info' %>
				  </section>
				  <section class="micropost_form">
				    <%= render 'shared/micropost_form' %>
				  </section>
				</aside>
			
			</div>
	
				<h3 class="text-center text-primary " >
					Follwer Updates
				</h3>	
				<div>	
					 <h3>Micropost Feed -- Current User Only for now --</h3>
	 					 <%= render 'shared/feed' %>
				</div>

			</div>

		</div>
	
	<% else %>
		<div class="center jumbotron">
			<h1>Welcome to Sweet Spot </h1>

			<h2>
				SweetSpot is a social network that allows people with type-1 diabetes to communicate and share their ideas. 
				This website is also meant to be a tool for people who donâ€™t know about diabetes, people who just recently became diagnosed or even people who just feel like supporting friends or the effort for a cure. 

				SweetSpot allows you to follow other users, view status updates, customize your own profile, and also add recipes to share with other users. 
			</h2>

			<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
		</div>


		<div id="myCarousel" class="carousel slide" data-ride="carousel">
		  <!-- Indicators -->
		  <ol class="carousel-indicators">
		    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		    <li data-target="#myCarousel" data-slide-to="1"></li>
		    <li data-target="#myCarousel" data-slide-to="2"></li>
		    <li data-target="#myCarousel" data-slide-to="3"></li>
		  </ol>

		  <!-- Wrapper for slides -->
		  <div class="carousel-inner" role="listbox">
		    <div class="item active">
	     		<%= link_to image_tag("myprofile.png", alt: "IDF Logo"),'http://www.idf.org/', id: "logoh" %>

		    </div>

		    <div class="item">
 	     		<%= link_to image_tag("myprofile.png", alt: "IDF Logo"),'http://www.idf.org/', id: "logoh" %>
		    </div>

		    <div class="item">
   	     		<%= link_to image_tag("myprofile.png", alt: "IDF Logo"),'http://www.idf.org/', id: "logoh" %>
		    </div>

		    <div class="item">
   	     		<%= link_to image_tag("myprofile.png", alt: "IDF Logo"),'http://www.idf.org/', id: "logoh" %>		     
		    </div>
		  </div>

		  <!-- Left and right controls -->
		  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
		    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
		  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
		    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
		</div>

	<% end %>








