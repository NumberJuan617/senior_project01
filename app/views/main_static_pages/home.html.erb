<% provide(:title, "Home") %>
<!-- NOTE: there is a lot of duplicate CSS information that can easily be placed into a class or ID in the custom.css file. Some of these 
	repetitive things include color, text-center, 
	 -->

	<% if logged_in? %>
		<div class="row clearfix alert alert-info" >
		
			<!-- This is grid is for the home page containing all of the users friends and information -->
			<div class="col-md-12 column" >

			<div class="row">

				<aside class="col-md-12">
				  <section class="user_info">
				    <%= render 'shared/user_info' %>
				  </section>
				  <section class="micropost_form">
				    <%= render 'shared/micropost_form' %>
				  </section>
				</aside>
			
			</div>
	
				<h3 class="text-center text-primary " >
					Follwer Updates
				</h3>	
				<div>	
					 <h3>Micropost Feed -- Current User Only for now --</h3>
	 					 <%= render 'shared/feed' %>
				</div>

			</div>

		</div>
	
	<% else %>


<div class="bg"></div>
<div class="jumbotron">
  <div class="center jumbotron">
			<h1>Welcome to Sweet Spot </h1>

			<h2>
				SweetSpot is a social network that allows people with type-1 diabetes to communicate and share their ideas. 
				This website is also meant to be a tool for people who donâ€™t know about diabetes, people who just recently became diagnosed or even people who just feel like supporting friends or the effort for a cure. 

				SweetSpot allows you to follow other users, view status updates, customize your own profile, and also add recipes to share with other users. 
			</h2>

			<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
	</div>
</div>

<div class="container">
  <div class="row">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
		  <!-- Indicators -->
		  <ol class="carousel-indicators">
		    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		    <li data-target="#myCarousel" data-slide-to="1"></li>
		    <li data-target="#myCarousel" data-slide-to="2"></li>
		    <li data-target="#myCarousel" data-slide-to="3"></li>
		  </ol>

		  <!-- Wrapper for slides -->
		  <div class="carousel-inner text-center" role="listbox">
		    <div class="item active">
	     		<%= link_to image_tag("home2.png", alt: "Edit Logo"),'http://www.idf.org/', id: "logoh" %>
		    </div>

		    <div class="item">
 	     		<%= link_to image_tag("userprofile2.png", alt: "Home Logo"),'http://www.idf.org/', id: "logoh" %>
		    </div>

		    <div class="item">
   	     		<%= link_to image_tag("recipes2.png", alt: "Profile Logo"),'http://www.idf.org/', id: "logoh" %>
		    </div>

		    <div class="item">
   	     		<%= link_to image_tag("edit2.png", alt: "Recipe Logo"),'http://www.idf.org/', id: "logoh" %>		     
		    </div>
		  </div>

		  <!-- Left and right controls -->
		  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
		    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
		  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
		    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
	</div>
  <hr>
  <div class="row text-center " style="color:white;">
    <h3>Create a Profile!</h3>
	    Create a profile and add interests, sports, activities, movies, tv shows, and more to express yourself
    <h3>Add Recipes!</h3>
	    Add recipes to share with others along with learn new ones as well!
    <h3>Meet new people!</h3>
	    Make new friends and provide support to those who are in need of finding new friends
  </div>
  <hr>
  <div class="row">

	  <h3>Log in</h3>

		<div class="row " style="color:white;">
		  <div class="col-md-6 col-md-offset-3">
		    <%= form_for(:session, url: login_path) do |f| %>

		      <%= f.label :email %>
		      <%= f.text_field :email, class: 'form-control' %>

		      <%= f.label :password %>
		      <%= link_to "(forgot password)", new_password_reset_path %>
		      <%= f.password_field :password, class: 'form-control' %>

		       <%= f.label :remember_me, class: "checkbox inline" do %>
		         <%= f.check_box :remember_me %>
		         <span>Remember me on this computer</span>
		       <% end %>


		      <%= f.submit "Log in", class: "btn btn-primary" %>
		    <% end %>
		  </div>
		</div>
	</div>

	<div class="row">

	  
	</div>
</div>

		

	<% end %>
<script type="text/javascript">

var jumboHeight = $('.jumbotron').outerHeight();
function parallax(){
    var scrolled = $(window).scrollTop();
    $('.bg').css('height', (jumboHeight-scrolled) + 'px');
}

$(window).scroll(function(e){
    parallax();
});
	

</script>







