<% provide(:title, "Home") %>
<!-- NOTE: there is a lot of duplicate CSS information that can easily be placed into a class or ID in the custom.css file. Some of these 
	repetitive things include color, text-center, 
	 -->

	<% if logged_in? %>
		<div class="row clearfix" >
			<!-- This grid below is for friends-->
			<div class="col-md-2 column" style="background-color:lavender;">
				<h3 class="text-center">
					Followers
				</h3>
				<div class="row clearfix">
					<div class="col-md-12 column" style="background-color:green;">
						<p class="text-center">
							Show All Users for Now

						</p>
						
					</div>
				
				</div>
			</div>

			<!-- This is grid is for the home page containing all of the users friends and information -->
			<div class="col-md-8 column" style="background-color:lavender;">

			<div class="row">

				<aside class="col-md-8 col-md-offset-2">
				  <section class="user_info">
				    <%= render 'shared/user_info' %>
				  </section>
				  <section class="micropost_form">
				    <%= render 'shared/micropost_form' %>
				  </section>
				</aside>



			<%= @lastMicropost%> <!-- Show the users last micropost -->

			</div>
	
				<h3 class="text-center text-primary " >
					Follwer Updates
				</h3>	
				<div>	
					 <h3>Micropost Feed -- Current User Only for now --</h3>
	 					 <%= render 'shared/feed' %>
				</div>

			</div>

			<div class="col-md-2 column" style="background-color:lavender;">
				<h3 class="text-center">
					Following
				</h3>

			</div>
		</div>
	
	<% else %>
		<div class="center jumbotron">
			<h1>Welcome to My Sweet Spot </h1>

			<h2>
				This is the home page for the my sweet spot social networking site. The home page will show recent news acquired from friends, groups, sports, interests, and what ever other sources the user specifies in their account. 

				Birthday Updates. events, important dates, and friend recommendations will be shown on this page. 
			</h2>

			<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
		</div>

	<% end %>








