<div class="row clearfix">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for (@userActivity) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.label :Activity,'Select the Activity' %>
			<%= f.select(:activity_id, @userActivityOptions) %>

			<%= f.hidden_field :user_id, :value =>@user.id %>


			<%= f.submit "Add Activity", class:"btn btn-primary" %>
		<% end %>	
	</div>
	
</div>		