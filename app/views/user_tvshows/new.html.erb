<div class="row clearfix">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for (@userTvshow) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :Sport,'Select the Sport' %>
			<%= f.select(:tvshow_id, @userTvshowOptions) %>

			<%= f.hidden_field :user_id, :value =>@user.id %>


			<%= f.submit "Add TV Show", class:"btn btn-primary" %>

			<h1>Add a new Television show instead</h1>

			<%=link_to 'Add New TV Show', addNewTvshow_path, class:"btn btn-primary" %>

		<% end %>	
	</div>
</div>		